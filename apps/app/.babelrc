{
  "presets": [
    [
      "@babel/preset-env",
      {
        "debug": true,
        "bugfixes": true,
        "useBuiltIns": "entry",
        "corejs": 3,
        "targets": "cover 99%",
        "forceAllTransforms": true,
        "spec": true,
        "loose": true,
        "include": [

        ]
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": {
          "version": 3,
          "proposals": false,
          "useBuiltIns": "entry",
          "helpers": true,
          "regenerator": true,
          "absoluteRuntime": true
        }
      }
    ],
    ["styled-components", { "pure": true, "ssr": true }]

  ]
}
